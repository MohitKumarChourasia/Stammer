    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/titleLayout">


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/task_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/back"
            android:layout_alignLeft="@+id/back"
            android:layout_marginStart="49dp"
            android:layout_marginLeft="49dp"
            android:paddingTop="10dp"
            android:text="Task Description"

            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />




    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="366dp"
        android:layout_below="@+id/titleLayout">

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.2dip"
            android:background="@android:color/black" />

        <TextView
            android:id="@+id/task"
            android:layout_width="86dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="19dp"
            android:text="Task"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/daily_speech"
            android:layout_width="156dp"
            android:layout_height="21dp"
            android:layout_below="@+id/task"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="5dp"
            android:text="Spread Awareness"
            android:textColor="#565656"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/task2"
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/daily_speech"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="25dp"
            android:paddingLeft="19dp"
            android:text="Description"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/paragraph"
            android:layout_width="288dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/task2"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="5dp"
            android:text="@string/talk_to_stranger_description"
            android:textColor="#565656"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/task3"
            android:layout_width="187dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/paragraph"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="31dp"

            android:text="Select Type of Proof"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/myRadioGroup_4"
            android:layout_width="229dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/task3"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="15dp">

            <RadioButton
                android:id="@+id/selfie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Upload a Selfie" />

            <RadioButton
                android:id="@+id/recording"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload Recording" />

            <RadioButton
                android:id="@+id/experience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Write about the experience" />


        </RadioGroup>

    </RelativeLayout>


    <Button
        android:id="@+id/button"
        android:layout_width="318dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="41dp"
        android:layout_marginLeft="41dp"
        android:layout_marginEnd="52dp"
        android:layout_marginRight="52dp"
        android:layout_marginBottom="81dp"
        android:background="@drawable/rounded_btn"
        android:text="Next"
        android:textAllCaps="false"
        android:textColor="#FFFFFF" />

    <!--<FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
